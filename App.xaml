<Application x:Class="OneNoteExporter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ===== Colors ===== -->
        <SolidColorBrush x:Key="PrimaryBlue"      Color="#0078D7"/>
        <SolidColorBrush x:Key="ButtonBlue"        Color="#007BFF"/>
        <SolidColorBrush x:Key="ButtonBlueHover"   Color="#0056B3"/>
        <SolidColorBrush x:Key="ButtonRed"         Color="#DC3545"/>
        <SolidColorBrush x:Key="ButtonRedHover"    Color="#C82333"/>
        <SolidColorBrush x:Key="ButtonGray"        Color="#5A5A5A"/>
        <SolidColorBrush x:Key="ButtonGrayHover"   Color="#444444"/>
        <SolidColorBrush x:Key="ButtonDisabled"    Color="#CCCCCC"/>
        <SolidColorBrush x:Key="BgPage"            Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BgCard"            Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BgList"            Color="#F8F9FA"/>
        <SolidColorBrush x:Key="BorderColor"       Color="#DEE2E6"/>
        <SolidColorBrush x:Key="BorderHover"       Color="#007BFF"/>
        <SolidColorBrush x:Key="TextPrimary"       Color="#333333"/>
        <SolidColorBrush x:Key="TextSecondary"     Color="#666666"/>
        <SolidColorBrush x:Key="SuccessBg"         Color="#D4EDDA"/>
        <SolidColorBrush x:Key="SuccessFg"         Color="#155724"/>
        <SolidColorBrush x:Key="SuccessBorder"     Color="#C3E6CB"/>
        <SolidColorBrush x:Key="WarningBg"         Color="#FFF3CD"/>
        <SolidColorBrush x:Key="WarningFg"         Color="#856404"/>
        <SolidColorBrush x:Key="WarningBorder"     Color="#FFEEBA"/>
        <SolidColorBrush x:Key="ErrorBg"           Color="#F8D7DA"/>
        <SolidColorBrush x:Key="ErrorFg"           Color="#721C24"/>
        <SolidColorBrush x:Key="ErrorBorder"       Color="#F5C6CB"/>
        <SolidColorBrush x:Key="InfoBg"            Color="#D1ECF1"/>
        <SolidColorBrush x:Key="InfoFg"            Color="#0C5460"/>
        <SolidColorBrush x:Key="InfoBorder"        Color="#BEE5EB"/>

        <!-- ===== Button Base ControlTemplate ===== -->
        <ControlTemplate x:Key="FlatButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="4"
                    Padding="{TemplateBinding Padding}"
                    SnapsToDevicePixels="True">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonDisabled}"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ===== Button Styles ===== -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background"   Value="{StaticResource ButtonBlue}"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"      Value="12,8"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="FontSize"     Value="14"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template"     Value="{StaticResource FlatButtonTemplate}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background"   Value="{StaticResource ButtonRed}"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"      Value="12,8"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="FontSize"     Value="13"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template"     Value="{StaticResource FlatButtonTemplate}"/>
        </Style>

        <Style x:Key="GrayButtonStyle" TargetType="Button">
            <Setter Property="Background"   Value="{StaticResource ButtonGray}"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"      Value="10,6"/>
            <Setter Property="FontSize"     Value="13"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template"     Value="{StaticResource FlatButtonTemplate}"/>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background"   Value="{StaticResource ButtonGray}"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"      Value="8,4"/>
            <Setter Property="FontSize"     Value="12"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template"     Value="{StaticResource FlatButtonTemplate}"/>
        </Style>

        <!-- ===== TextBox Style ===== -->
        <Style TargetType="TextBox">
            <Setter Property="Padding"       Value="8,6"/>
            <Setter Property="BorderBrush"   Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background"    Value="#F0F0F0"/>
            <Setter Property="FontSize"      Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush"  Value="{StaticResource BorderHover}"/>
                    <Setter Property="Background"   Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush"  Value="{StaticResource BorderHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ===== ComboBox Style ===== -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding"          Value="8,6"/>
            <Setter Property="BorderBrush"      Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="Background"       Value="White"/>
            <Setter Property="FontSize"         Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource BorderHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
